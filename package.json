{
  "name": "places-api",
  "version": "0.0.0",
  "description": "Places RESTful API",
  "license": "MIT",
  "author": {
    "name": "Federico Kn√ºssel",
    "email": "fknussel@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fknussel/places-api.git"
  },
  "scripts": {
    "clean": "rimraf build",
    "serve": "node build/bundle.js",
    "bundle:prod": "webpack -p --mode production",
    "bundle:dev": "webpack --watch --mode development",
    "build": "npm-run-all clean bundle:prod",
    "watch": "npm-run-all --parallel bundle:dev serve",
    "start": "npm-run-all build serve",
    "test": "mocha --reporter spec --require ts-node/register 'test/**/*.ts'"
  },
  "dependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/express": "^4.17.1",
    "@types/mongodb": "^3.3.5",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.11",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongodb": "^3.3.2",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "nodemon": "^1.19.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
